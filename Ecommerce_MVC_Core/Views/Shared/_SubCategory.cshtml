@model IEnumerable<Ecommerce_MVC_Core.ViewModel.CategoryViewModel>

    
    @foreach (var item in Model)
    {
        
           
            <div class="col-md-4">
                <div class="list-group">
                    <a asp-controller="Home" asp-action="Product" asp-route-Category="@item.Id" class="list-group-item active">@item.Name</a>
                @Html.Partial("SubLevelCategory", item.CategoryMenus)
            </div>
            
        </div>

          
        
    }
