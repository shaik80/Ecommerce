                        @await Component.InvokeAsync("GetHeaderMainMenu")

                    </ul>
                </div>
            </div>
            <div class="top_nav_right">
                <a asp-controller="Order" asp-action="Index">

                    <button type="button" class="search_button wthreecartaits wthreecartaits2 cart cart box_1">

                        <span class="fa fa-shopping-basket" style="font-size: 20px;"></span>
                        <span>
                            <b class="item_color">
                                @{
                                    int? item = Context.Session.GetInt32("itemCount");
                                }
                                @item
                            </b>
