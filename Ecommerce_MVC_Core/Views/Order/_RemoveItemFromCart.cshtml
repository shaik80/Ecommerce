@model Ecommerce_MVC_Core.ViewModel.Public.AddToCartViewModel
<form asp-action="RemoveItemFromCart" role="form">
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Remove Product" })

    <div class="modal-body form-horizontal">
        Are you want to remove <strong>@Model.ProductName</strong>
    </div>

    @Html.Partial("_ModalFooter", new ModalFooter { SubmitButtonText = "Remove" })
</form>